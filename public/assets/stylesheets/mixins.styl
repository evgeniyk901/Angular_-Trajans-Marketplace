.box-listing {
	margin-bottom: 30px;
	border: solid 1px #d8d8d8;
	position: relative;
	.box-listing-overlay {
		transition (0.3s);
        opacity: 0;      
		height: 100%;
        width: 100%;
        position: absolute;
        z-index: 10;
        background-color:#000;	
        top:0;
    }
    
    .box-listing-overlay-description {
    	transition (0.3s);
        opacity: 0;  
		height: 100%;
        width: 100%;
        position: absolute;
        z-index: 10;
        top:0;
        color: white;
        padding-top:30px;
        -webkit-transform: translateY(20px);
        -moz-transform: translateY(20px);
        -o-transform: translateY(20px);
        transform: translateY(20px);


        h4 {
            color:white;
        }

        .pipe {
            margin: 0 10px;
        }
    }

	.box-listing-image {
        text-align:center;
        position:relative;
		img {
            width:100%;
            height:auto;             
            vertical-align:middle;       
		}
	}
 
    .listing-user-image {
        padding-bottom:10px;
        z-index:15;
        width:100%;
        text-align:right;
        padding-right:10px;
        img {
            z-index:15;
            height: 30px;
            width: 30px;
            border-radius: 50%;
        }
    }        
    
	.box-listing-info {
		padding: 30px 20px;
        position: relative;
        height:130px;
        h4 {
            font-size:20px;
            text-transform:capitalize;
            font-weight:normal;
        }
        
        .price {
            font-weight:bold;
            font-size:30px;
            color:darkish-grey;
        }
        
        .saving {
            color:pink;
            font-weight:bold;
            font-size:16px;
        }
	}
    
    .box-listing-merchant-info {
        position: relative;
        z-index: 999;
        
        .small-listing-image {
             padding:0 10px 10px 10px;
        }
        
        .merchantName {
            position:absolute;
            bottom:-55px;
            left:20px;
            font-size:14px;
            font-weight:bold;
        }
    }   

	&:hover {

		cursor:pointer;

		.box-listing-overlay {
			opacity:0.9;
			transition (0.3s)
		}
		.box-listing-overlay-description {
			transition (0.3s);
           -webkit-transform: translateY(0px);
            -moz-transform: translateY(0px);
            -o-transform: translateY(0px);
            transform: translateY(0px);         
			opacity:1;
		}
		
	}
}

