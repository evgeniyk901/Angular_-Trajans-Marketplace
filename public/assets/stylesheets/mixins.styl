.category-box-2 {
    padding:0;
    margin-bottom:30px;
    
    a:hover >  {
        text-decoration:none !important;
    }
    .category-box-2-image {
        position: relative;
        max-width:100%;
        text-align:center;
        &:hover > .category-box-2-overlay {
            opacity:1;
            -webkit-transform: translateY(0px);
            -moz-transform: translateY(0px);
            -o-transform: translateY(0px);
            transform: translateY(0px);
        }
        
        img {
            width:100%;
        }
    }
    .category-box-2-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(000,000,000,0.7);
        opacity:0;
        color: #fff;
        padding-top:40%;
        transition (0.3s);
        -webkit-transform: translateY(20px);
        -moz-transform: translateY(20px);
        -o-transform: translateY(20px);
        transform: translateY(20px);
        span {
            color:white;
            font-size:16px;
            text-transform: uppercase;
        }
    }

    .category-box-2-name {
        width:100%;
        text-align:center;
        padding:20px 0 20px 0;
        color: #393833;
        font-weight: bold;
        text-transform: uppercase;
        font-size: 16px;
        display: block;
        z-index:9999;
    }
